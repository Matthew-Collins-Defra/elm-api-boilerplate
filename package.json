{
  "name": "elm-api-boilerplate",
  "description": "ELM Land Management Plan api boilerplate",
  "license": "OGL-UK-3.0",
  "version": "1.0.0",
  "homepage": "https://github.com/Matthew-Collins-Defra/elm-api-boilerplate",
  "author": "Defra DDTS",
  "contributors": [
    "Matthew Collins <matthew.collins@defra.gov.uk>",
    "David Bingham <david.bingham@defra.gov.uk>",
    "Mark Harrop <mark.harrop@defra.gov.uk>"
  ],
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all --parallel test:lint test:unit",
    "test:lint": "standard",
    "test:snyk": "snyk test",
    "test:unit": "jest",
    "watch:unit": "jest --coverage=false --onlyChanged --watch"
  },
  "dependencies": {
    "boom": "^7.3.0",
    "hapi": "^18.1.0",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "blipp": "^4.0.1",
    "codeclimate-test-reporter": "^0.5.1",
    "good": "^8.1.2",
    "good-console": "^8.0.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.1.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "snyk": "^1.996.0",
    "standard": "^12.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!**/*.test.js"
    ],
    "coverageDirectory": "test-output",
    "coverageReporters": [
      "text-summary",
      "cobertura"
    ],
    "modulePathIgnorePatterns": [
      "node_modules"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "suiteName": "jest tests",
          "outputDirectory": "test-output",
          "outputName": "junit.xml"
        }
      ]
    ],
    "resetModules": true,
    "restoreMocks": true,
    "testEnvironment": "node"
  },
  "standard": {
    "ignore": [
      "/test/"
    ]
  }
}
