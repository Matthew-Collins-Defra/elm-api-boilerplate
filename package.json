{
  "name": "elm-api-boilerplate",
  "version": "1.0.0",
  "description": "ELM Land Management Plan api boilerplate",
  "homepage": "https://github.com/Matthew-Collins-Defra/elm-api-boilerplate",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "start": "node index.js",
    "test": "npm run test:unit",
    "test:lint": "standard",
    "test:snyk": "snyk test",
    "test:unit": "lab -c -r console -o stdout -r junit -o ./test-output/TEST-$(date '+%Y%m%d-%H%M%S').xml",
    "watch:unit": "nodemon --inspect=0.0.0.0 --exec npm run test:unit"
  },
  "author": "Defra DDTS",
  "contributors": [
    "Matthew Collins <matthew.collins@defra.gov.uk>",
    "David Bingham <david.bingham@defra.gov.uk>",
    "Mark Harrop <mark.harrop@defra.gov.uk>"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "boom": "^7.3.0",
    "hapi": "^18.1.0",
    "joi": "^14.3.1"
  },
  "devDependencies": {
    "blipp": "^4.0.0",
    "code": "^5.2.4",
    "codeclimate-test-reporter": "^0.5.1",
    "good": "^8.1.2",
    "good-console": "^8.0.0",
    "good-file": "^6.0.1",
    "good-squeeze": "^5.1.0",
    "lab": "^18.0.2",
    "nodemon": "^1.19.0",
    "snyk": "^1.162.1",
    "standard": "^12.0.1"
  }
}
